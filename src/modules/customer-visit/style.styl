.select
  width 250px
.color
  color #999999
  font-size 12px
.box
  margin: 24px 16px
  padding: 0
  overflow: auto
  position: relative
  height: 100%
  border-radius: 0!important
  box-shadow none!important
  .search
    margin-bottom 15px
  .top-info
    background-color #ffffff
    padding 15px
  .left-con
    width 60%
    height 100%
    margin-right 1%
    background-color #ffffff
    .menu
      width 80px
      height 40px
      line-height 40px
      text-align center
      font-family PingFangSC-Regular
      font-size 14px
      color #666666
      letter-spacing 0.9px
      cursor pointer
    .focus
      background #F6FBFF
      color #1890FF
    .con
      border-left 1px solid #e5e5e5
      padding 0 10px
      width 88%
  .right-con
    width 39%
    height 100%
    .visit-con
      background-color #ffffff
      padding 10px
    .records-con
      background-color #ffffff
      padding 10px
.container
  :global
    .ant-form-item
      margin-bottom: 5px
      font-size: 12px
    input::-webkit-outer-spin-button
    input::-webkit-inner-spin-button {
       -webkit-appearance: none !important
    }
.label
  :global
    .ant-form label 
      font-size: 12px
.uploader
  display: inline-block
  img 
    width: 28px
    height: 28px
    cursor pointer
  .upload-btn
    display: inline-block
    padding: 2px 4px
    border-radius: 4px
    font-size: 12px
    cursor: pointer
    border: 1px solid #d9d9d9
    line-height: 14px
    color: rgba(0, 0, 0, 0.65)
.company-search
  position relative
  ul
    width 250px
    list-style none
    position absolute
    z-index 100
    background #FFFFFF
    max-height 200px
    overflow auto
    box-shadow 0 2px 8px rgba(0, 0, 0, 0.15)
    background-clip padding-box
    li
      width 100%
      cursor pointer
      transition all .3s
      line-height 22px
      padding 5px 12px
      margin 0
      &:hover
        background-color #e6f7ff
