.container
  .steps
    height: 120px
    width: 600px
    margin: 0 auto
    position relative
    .lines
      position: absolute
      top: 58px
      .line
        float: left
        width: 120px
        height: 4px
        margin: 0 15px
        background: #E5E5E5
        &.active
          background: #1890FF
    .signpost
      position: absolute
      display: inline-block
      transform: translateX(-50%)
      .signpost-line
        border-width: 1px
        border-style: dashed
        border-color: #ebebeb
        width: 0px
        height: 25px
        position: absolute
        top: 27px
        left: 50%
        transform: translateX(-50%)
        &:after
          content: ''
          width: 10px
          height: 10px
          display: block
          border: 2px solid #E5E5E5
          border-radius: 50%
          position: absolute
          bottom: -14px
          left: -5px
      .signpost-box
        min-width: 120px
        height: 30px
        background: #EBEBEB
        border-radius: 4px
        font-size: 12px;
        color: #999999;
        letter-spacing: 0.35px
        text-align: center
        line-height: 30px
    .signpost-active
      .signpost-line
        border-color: #2C91FF
        &:after
          border-color: transparent
          background-color: #2C91FF
      .signpost-box
        background: #1890FF
        color: white
