.profile
  position relative
  .left
    position absolute
    width: 120px
    top: 0
    bottom: 0
    left: 0
    .picture
      width: 100px
      height: 72px
      background: url('@/assets/images/profile.png')
  .right
    margin-left: 120px
    .title
      font-size: 16px
      color: #000000
      font-weight: bold
      margin-bottom: 2px
      min-height: 24px
    p
      color: #666666
      margin: 0
      padding: 4px 0px
      label 
        margin-right: 4px
  .verified
    // cursor pointer
    width: 20px
    height: 20px
    background: url('@/assets/images/verified.png') 100% 100% no-repeat
    display: inline-block
    vertical-align: bottom;
